source 'https://rubygems.org'

ruby '2.2.2'

gem 'rails'
gem 'sqlite3'
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder'
gem 'sdoc', group: :doc
gem 'bootstrap-sass'
gem 'font-awesome-rails'

gem 'nokogiri'
gem 'httparty'

group :development, :test do
  gem 'byebug'
  gem 'web-console', '~> 2.0'
  gem 'spring'
  gem 'quiet_assets' # Turns off the Rails asset pipeline log
  gem 'bullet' # help reduce sql query speeds
  gem 'lol_dba' # helps scan for better indexing
end

group :production do
  gem 'pg'
end